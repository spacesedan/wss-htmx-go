<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- HTMX -->
  <script src="/static/htmx.js"></script>
  <!-- Websockets Extension  -->
  <script src="/static/ws.js"></script>
  <!-- Tailwind Css -->
  <script src="https://cdn.tailwindcss.com"></script>

  <title>HTMX with websockets</title>
</head>

<body>
  <div class="container p-12" hx-ext="ws" ws-connect="ws://localhost:8080/ws">


    <form id="messageForm" ws-send type='submit'>
      <input name="message" id="messageBox" class="border-2" />
    </form>


  </div>

  <script type="text/javascript" src="/static/index.js"></script>
</body>

</html>
